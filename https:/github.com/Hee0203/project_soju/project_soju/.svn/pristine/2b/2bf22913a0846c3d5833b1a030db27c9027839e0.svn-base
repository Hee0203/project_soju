*{
    font-family: 'Noto Sans KR', sans-serif;
    list-style: none;
    text-decoration: none;
    margin: 0 auto;
    padding: 0;
    color: black;
}
.intro_bg{
    width: 100%;
    height: 80px;
}
.header{
    width: 1280px;
    height: 50px;
    display: flex;
}

.nav{
    display: flex;
    margin-top: 24px;
}
.nav > li {
    margin-left: 60px;
}
.nav a {
    font-weight: bold;
    font-size: 18px;
}

.searchArea{
    width: 320px;
    height: 30px;
    margin-top: 22px;
}
.searchArea input{
    margin-left: 26px;
    border-radius: 30px;
    width: 200px;
    background-color: transparent;
    padding-left: 10px;
    border: 2px solid black;
}
.searchArea span{
    width: 50px;
    font-weight: bold;
    cursor: pointer;
    margin-left: 10px;
}

.intro_text{
    width: 200px;
    margin-top: 22px;
    text-align: left;
    position: relative;
}
.searchArea{
    background-color: transparent;
    margin-top: 24px;
}